<div class="container">
	<div class="row">
		<div class="col-lg-3" style="background-color: orange;">
			<h2>User info</h2>
			<%= form_for(@user) do |f| %>
			    <h5>name</h5>
			    <%= f.text_field :username %>
			    <h5>image</h5>
			    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user_image" %>
			    <h5>Introduction</h5>
			    <%= f.text_area :profile_intro %><br>
			    <%= f.submit '保存' %>
			<% end %>

		</div>

