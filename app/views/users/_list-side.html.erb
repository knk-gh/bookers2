<div class="container">
	<div class="row">
		<div class="col-lg-3" style="background-color: orange;">
			<h2>User info</h2>
			<table class="table">
				<tr>
					image
				</tr>
				<tr>
					<td>name</td>
					<td>
						<% if user_signed_in? %>
							<%= current_user.username %>
						<% else %>
							<%= user.username %>
						<% end %>
						</td>
				</tr>
				<tr>
					<td>introduction</td>
					<td><%= current_user.profile_intro %></td>
				</tr>
			</table>
			<%= link_to edit_user_path(@user), class:'btn btn-default btn-md col-lg-12', style:"margin-bottom:10px;" do %>
			<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
			<% end %>
			<h2>New book</h2>
			<%= form_for(@book) do |f| %>

				<h5>Title</h5>
				<%= f.text_field :book_title, class:"col-lg-12", style:"margin-bottom:10px;" %>
				<h5>Opinion</h5>
				<%= f.text_area :book_opinion, class:"col-lg-12", style:"margin-bottom:10px;" %><br>
				<%= f.submit 'Create Book', class:"btn btn-danger col-lg-12" %>
			<% end %>
		</div>