<%= render 'home/list-h' %>

<div class="container">
	<div class="row">
		<div class="col-lg-3" style="background-color: orange;">
			<h2>User info</h2>
			<table class="table">
				<tr>
					<%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "hoka_05_question.png" %>
				</tr>
				<tr>
					<td>name</td>
					<td><%= current_user.username %></td>
				</tr>
				<tr>
					<td>introduction</td>
					<td><%= current_user.profile_intro %></td>
				</tr>
			</table>
			<%= link_to edit_user_path(current_user.id), class:'btn btn-default btn-md col-lg-12', style:"margin-bottom:10px;" do %>
			<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
			<% end %>
			<h2>New book</h2>
			<%= form_for(@book) do |f| %>

				<h5>Title</h5>
				<%= f.text_field :book_title, class:"col-lg-12", style:"margin-bottom:10px;" %>
				<h5>Opinion</h5>
				<%= f.text_area :book_opinion, class:"col-lg-12", style:"margin-bottom:10px;" %><br>
				<%= f.submit 'Create Book', class:"btn btn-danger col-lg-12" %>
			<% end %>

		</div>
		<div class="col-lg-9" style="background-color: green;">
			<h1>Users</h1>
			<table class="table table-hover">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th></th>
					</tr>
				</thead>
				<% @users.each do |user| %>
					<tr>
						<td>
							<%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "hoka_05_question.png" %></td>
						<td><%= user.username %></td>
						<td><%= link_to "Show", user_path(user.id) %></td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>

<%= render 'home/list-f' %>