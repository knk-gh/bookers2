<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<h2>User info</h2>
			<table class="table">
				<tr>
					<%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "hoka_05_question.png", style:"margin-bottom:10px;" %>
				</tr>
				<tr>
					<td>name</td>
					<td><%= current_user.username %></td>
				</tr>
				<tr>
					<td>introduction</td>
					<td><%= current_user.profile_intro %></td>
				</tr>
			</table>
			<%= link_to edit_user_path(current_user.id), class: 'btn btn-default btn-md col-lg-12 edit_user_#{current_user.id}', style:"margin-bottom:10px;" do %>
			<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
			<% end %>
			<h2>New book</h2>

			<%= form_for(@book) do |f| %>
				<% if @book.errors.any? %>
        		<%= @book.errors.count %>件のエラーが発生しました
        		<% @book.errors.full_messages.each do |message| %>
           	 	<%= message %>
        		<% end %>
    			<% end %>

				<h5>Title</h5>
				<%= f.text_field :book_title, class: "col-lg-12 book_title", style:"margin-bottom:10px;" %>
				<h5>Opinion</h5>
				<%= f.text_area :book_opinion, class: "col-lg-12 book_body", style:"margin-bottom:10px;" %><br>
				<%= f.submit 'Create Book', class: "btn btn-danger col-lg-12" %>
			<% end %>

		</div>