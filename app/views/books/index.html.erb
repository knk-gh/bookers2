<%= render 'home/list_h' %>
<%= render 'home/list_side' %>

		<div class="col-lg-9">
			<h1>Books</h1>
			<table class="table table-hover"">
				<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
				</thead>
				<% @books.each do |book| %>
				<tr>
					<td>
						<%= link_to user_path(book.user.id), class: "user_#{book.user.id}" do %>
						<%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "hoka_05_question.png" %></td>
						<% end %>
					<td>
						<%= link_to book_path(book.id), class: "book_#{book.id}" do %>
						<%= book.book_title %>
						<% end %>
					</td>
					<td><%= book.book_opinion %></td>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>












