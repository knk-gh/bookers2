<%= render 'home/list-h' %>


<div class="container">
	<div class="row">
		<div class="col-lg-3" style="background-color: orange;">
			<h2>User info</h2>
			<table class="table">
				<tr>
					<%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "hoka_05_question.png" %>
				</tr>
				<tr>
					<td>name</td>
					<td><%= current_user.username %></td>
				</tr>
				<tr>
					<td>introduction</td>
					<td><%= current_user.profile_intro %></td>
				</tr>
			</table>
			<%= link_to edit_user_path(current_user.id), class:'btn btn-default btn-md col-lg-12', style:"margin-bottom:10px;" do %>
			<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
			<% end %>
			<h2>New book</h2>
			<%= form_for(@book) do |f| %>

				<h5>Title</h5>
				<%= f.text_field :book_title, class:"col-lg-12", style:"margin-bottom:10px;" %>
				<h5>Opinion</h5>
				<%= f.text_area :book_opinion, class:"col-lg-12", style:"margin-bottom:10px;" %><br>
				<%= f.submit 'Create Book', class:"btn btn-danger col-lg-12" %>
			<% end %>

		</div>
		<div class="col-lg-9" style="background-color: green;">
			<h1>Books</h1>
			<table class="table table-hover"">
				<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
				</thead>
				<% @books.each do |book| %>
				<tr>
					<td>
						<%= link_to user_path(book.user.id) do %>
						<%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "hoka_05_question.png" %></td>
						<% end %>
					<td>
						<%= link_to book_path(book.id) do %>
						<%= book.book_title %>
						<% end %>
					</td>
					<td><%= book.book_opinion %></td>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>












