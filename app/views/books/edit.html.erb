<%= render 'home/list-h' %>

<div class="container">
	<div class="row">
		<div class="col-lg-6 col-md-offset-3" style="background-color: blue;">

			<h2>Editing Book</h2>
			<%= form_for(@book) do |f| %>
			<h5>Title</h5>
			<%= f.text_field :book_title, class:"col-lg-12", style:"margin-bottom:10px;" %>
			<h5>Opinion</h5>
			<%= f.text_area :book_opinion, class:"col-lg-12", style:"margin-bottom:10px;" %>
			<%= f.submit 'Update Book', class:"btn btn-warning col-lg-12", style:"margin-bottom:10px;" %>
			<% end %>
			<p><%= link_to "Show", book_path %> | <%= link_to "Back", books_path %></p>
		</div>
	</div>
</div>

<%= render 'home/list-f' %>